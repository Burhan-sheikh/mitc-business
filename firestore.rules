rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidProduct() {
      let data = request.resource.data;
      return data.title is string &&
             data.title.size() > 0 &&
             data.price is number &&
             data.price >= 0 &&
             data.category is string &&
             data.brand is string &&
             data.inStock is bool &&
             data.images is list &&
             data.images.size() > 0 &&
             data.images.size() <= 10;
    }
    
    function isValidReview() {
      let data = request.resource.data;
      return data.rating is int &&
             data.rating >= 1 &&
             data.rating <= 5 &&
             data.comment is string &&
             data.comment.size() >= 10 &&
             data.comment.size() <= 1000;
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      
      // Only admins can create, update, delete
      allow create: if isAdmin() && isValidProduct();
      allow update: if isAdmin() && isValidProduct();
      allow delete: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId) || isAdmin();
      
      // Users can create their own profile
      allow create: if isOwner(userId) &&
                       request.resource.data.role in ['guest', 'user'] &&
                       request.resource.data.uid == userId;
      
      // Users can update their own profile (except role)
      allow update: if isOwner(userId) &&
                       (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid']));
      
      // Admins can update any user
      allow update: if isAdmin();
      
      // Users can mark deletion request
      allow update: if isOwner(userId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['deletionRequested', 'deletionRequestedAt']);
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      
      // Authenticated users can create reviews
      allow create: if isAuthenticated() && 
                       isValidReview() &&
                       request.resource.data.userId == request.auth.uid;
      
      // Users can update their own reviews
      allow update: if isOwner(resource.data.userId) && isValidReview();
      
      // Admins can update/delete any review
      allow update, delete: if isAdmin();
      
      // Users can delete their own reviews
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Store metadata (read by all, write by admin only)
    match /storeMeta/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Product imports (admin only)
    match /productImports/{importId} {
      allow read, write: if isAdmin();
    }
    
    // Admin logs (admin only)
    match /adminLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // Analytics (admin only)
    match /analytics/{docId} {
      allow read, write: if isAdmin();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
